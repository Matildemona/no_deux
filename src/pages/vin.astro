---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Event from "../components/Event.astro";
import Vin_icon from "../components/Vin_icon.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex" />
    <title>Vinsmagning</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Allerta&display=swap" rel="stylesheet" />
  </head>

  <body>
    <Header />
    <main>
      <Event
        overskrift="Vinsmagning"
        pris="250,-"
        text="Vinsmagning hos No Deux er for alle der elsker vin, eller gerne vil overbevise deres venner om, at vin er det bedste. Vi har vores egen vin-connoisseur og dækker op med både ost og kiks under eventet,
      som varer i 2 timer. <br />
      Vi tilbyder en blandet pakke med 6 glas, 2 glas rødvin, 1 glas rosé, 2 glas hvidvin og 1 glas mousserende vin."
        <img
        class="img_mand"
        src="public/webp/vinsmagning.webp"
        alt="kniv og gafler"
      />

      <Event />
      <Vin_icon />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>
