---
import "../css/generel.css";
import Button from "../components/Button.astro";
---

<footer>
  <img src="public/svg/footer_line.svg" alt="footer line" />
  <div class="grid_footer">
    <div class="textalign_center">
      <h2>Kontakt</h2>
      <p>Gyldenløvesgade 4</p>
      <p>1569 København K</p>
      <p>+45 21 20 08 18</p>
      <p><a href="#">Info@nodeux.dk</a></p>
      <p>CVR: 43250485</p>
      <br />
      <a href="https://www.instagram.com/nodeux_cph/?hl=en" target="”_blank”">
        <img
          class="some_logo"
          src="/svg/some_instagram.svg"
          alt="instagram"
        /></a
      >
      <a
        href="https://www.facebook.com/profile.php?id=100083668621682"
        target="”_blank”"
      >
        <img class="some_logo" src="/svg/some_facebook.svg" alt="facebook" /></a
      >
    </div>
    <div class="textalign_center åbningstider_margin">
      <h2>Åbningstider</h2>
      <p>Søndag - Mandag</p>
      <p><b>Lukket</b></p>
      <br />
      <p>Tirsdag - Onsdag</p>
      <p><b>kl. 17.30-00.00</b></p>
      <br />
      <p>Torsdag - Lørdag</p>
      <p><b>kl. 12.00-00.00</b></p>
    </div>
    <div class="grid_tilmeld_mail">
      <div>
        <h2>Tilmeld dig vores mail</h2>
        <input type="text" placeholder="Email*" />
        <hr
          style="height:1px;width:90%;border-width:0;background-color:var(--blue)"
        />
      </div>
      <div class="footer_knap">
        <Button text="tilmeld" href="#" />
      </div>
    </div>
    <div>
      <img
        class="footer_man_size"
        src="svg/footer_man.svg"
        alt="No Deux Maskot"
      />
    </div>
  </div>
</footer>

<style>
  footer {
    margin-top: 20px;
  }
  .textalign_center {
    text-align: center;
  }
  .grid_tilmeld_mail {
    margin-left: 40px;
    margin-top: 50px;
    text-align: center;
  }
  .åbningstider_margin {
    margin-top: 40px;
  }
  .some_logo {
    width: 10%;
    display: inline;
  }
  h2 {
    margin-bottom: 10px;
  }
  .footer_knap {
    margin-top: 63px;
  }
  .footer_man_size {
    width: 70%;
    margin-top: 50px;
    float: right;
  }
  a {
    text-decoration: none;
    color: var(--blue);
  }

  /*********** INPUT ***********/
  input {
    border: none;
    height: 30px;
    font-family: "brandon-grotesque", sans-serif;
    font-size: 1.3rem;
    color: var(--blue);
    background-color: var(--background_light);
    margin-top: 20px;
  }

  input:focus {
    outline: none;
  }

  input::placeholder {
    color: var(--blue);
    font-family: "brandon-grotesque", sans-serif;
    font-size: 1.3rem;
  }
  /*********** MEDIA QUERY ***********/
  @media (min-width: 1100px) {
    /*********** GRID ***********/
    .grid_footer {
      display: grid;
      grid-template-columns: 1fr 1fr 3fr 1fr;
    }
    .grid_tilmeld_mail {
      display: grid;
      grid-template-columns: 3fr 1fr;
      gap: 20px;
      padding-left: 70px;
    }
    /*********** SIZE ***********/

    .some_logo {
      width: 15%;
      display: inline;
    }
    .åbningstider_margin,
    .tilmeld_margin {
      margin-top: 0;
    }
    .footer_man_size {
      width: 100%;
    }
    .grid_tilmeld_mail {
      text-align: left;
    }
  }
</style>
