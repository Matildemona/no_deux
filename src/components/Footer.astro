<style>
  .textalign_center {
    text-align: center;
  }
  .grid_footer {
    display: grid;
    grid-template-columns: 1fr 1fr 3fr 1fr;
  }
  .grid_tilmeld_mail {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 20px;
    padding-left: 70px;
  }
  .some_logo {
    width: 15%;
    display: inline;
  }
  h2 {
    margin-bottom: 10px;
  }
  .footer_knap {
    margin-top: 63px;
  }
  .footer_man_size {
    width: 100%;
  }
  a {
    text-decoration: none;
    color: var(--blue);
  }
</style>
