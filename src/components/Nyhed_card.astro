---
import Button from "../components/Button.astro";
const { image, alt, headline, text, href } = Astro.props;
---

<div class="nyheds_card">
  <figure class="card_img_container">
    <img src={image} alt={alt} />
  </figure>
  <div class="nyheds_card_text">
    <h3>{headline}</h3>
    <p>{text}</p>
    <Button text="LÃ¦s Mere" href="{href}" />
  </div>
</div>

<style>
  div.nyheds_card {
    display: flex;
    flex-direction: column;
    gap: 20px;

    max-width: 400px;
    border-radius: 40px;
    background-color: var(--background_dark);
  }
  figure.card_img_container {
    width: 400px;
  }
  figure.card_img_container img {
    width: 100%;
    border-radius: 40px 40px 0px 0px;
  }
  .nyheds_card_text {
    margin: 0px 40px;
    padding-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .nyheds_card_text h3 {
    font-family: "Allerta", sans-serif;
    font-weight: 500;
    font-size: 1.5rem;
  }

  .nyheds_card_text p {
    text-align: left;
  }
</style>
