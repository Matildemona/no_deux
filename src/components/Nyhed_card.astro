---
import Button from "../components/Button.astro";
const { image, alt, headline, text, knap, href } = Astro.props;
---

<div class="nyheds_card">
  <figure class="card_img_container">
    <img src={image} alt={alt} />
  </figure>
  <div class="nyheds_card_text">
    <h3>{headline}</h3>
    <p>{text}</p>
    <div class="laes_mere"><Button text={knap} href={href} /></div>
  </div>
</div>

<style>
  .nyheds_card {
    display: flex;
    flex-direction: column;
    gap: 10px;

    max-width: 300px;
    border-radius: 40px;
    background-color: var(--background_dark);
  }
  figure.card_img_container {
    width: 300px;
    height: 200px;
    overflow: hidden;
  }
  figure.card_img_container img {
    width: 100%;
    border-radius: 40px 40px 0px 0px;
  }
  .nyheds_card_text {
    margin: 0px 30px;
    padding-bottom: 30px;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .nyheds_card_text h3 {
    font-family: "Allerta", sans-serif;
    font-weight: 500;
    font-size: 1.7rem;
    text-align: center;
  }

  .nyheds_card_text p {
    text-align: left;
  }

  .laes_mere {
    margin: 10px 0px 20px 5%;
    text-align: center;
  }
  @media (min-width: 1200px) {
    div.nyheds_card {
      display: flex;
      flex-direction: column;
      gap: 20px;

      max-width: 400px;
      border-radius: 40px;
      background-color: var(--background_dark);
    }
    figure.card_img_container {
      width: 400px;
      height: 300px;
      overflow: hidden;
    }

    .nyheds_card_text {
      margin: 0px 40px;
      padding-bottom: 40px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .nyheds_card_text h3 {
      font-family: "Allerta", sans-serif;
      font-weight: 500;
      font-size: 1.7rem;
    }

    .nyheds_card_text p {
      text-align: left;
      height: 173px;
    }

    .laes_mere {
      margin: 20px 0px 10px 0px;
    }
  }
</style>
